mixin amenity-grid(headline, copy, ...amenities)
	.amenity-grid
		.content-wrap
			.row
				.col-xs-12.col-md-8
					h2= headline
					p= copy
			
			.row
				each amenity in amenities
					.col-xs-6.col-md-4.col-lg-3
						.amenity-block
							i(class="bi_" + amenity.icon)
							p= amenity.name
			