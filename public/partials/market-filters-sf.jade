.market-filters.market-filters-sf
	i.bi_interface-cross.btn-market-filters-close
	
	.content-wrap
		.responsive-block
			.row
				.col-xs-12.col-md-6.col-md-offset-3.text-center
					h2.impact-2 Find the Perfect Space
					p.copy-2 Our filters can help you refine your workspace results.

			form
				.row
					.col-xs-12.col-md-6.col-md-offset-3.text-center
						label(for="desk-number") How many desks do you need?
							input(type="number" id="desk-number" name="desk-number" placeholder="Approximate number")

						label How many people are in your company?
							.label--filter-option-group.text-center
								label.label--filter-option(for='company-size-1') 1–19
									input#company-size-1(type='radio', name='company-size', value='1–19')
								label.label--filter-option(for='company-size-2') 20–99
									input#company-size-2(type='radio', name='company-size', value='20–99')
								label.label--filter-option(for='company-size-3') 100–999
									input#company-size-3(type='radio', name='company-size', value='100–999')
								label.label--filter-option(for='company-size-3') 1000+
									input#company-size-3(type='radio', name='company-size', value='1000+')

						label When would you like to move in?
							.label--filter-option-group.text-center
								label.label--filter-option(for='when-asap') ASAP
									input#when-asap(type='radio', name='when', value='ASAP')
								label.label--filter-option(for='when-next-month') Next month
									input#when-next-month(type='radio', name='when', value='Next month')
								label.label--filter-option(for='when-after-next-month') After next month
									input#when-after-next-month(type='radio', name='when', value='After next month')
								label.label--filter-option(for='when-undecided') Undecided
									input#when-undecided(type='radio', name='when', value='Undecided')

						label What areas are you interested in?
							.label--filter-option-multi-group.text-center
								label.label--filter-option-multi(for='area-san-francisco') San Francisco
									input#area-san-francisco(type='checkbox', name='area', value='San Francisco')
								label.label--filter-option-multi(for='area-san-jose') San Jose
									input#area-san-jose(type='checkbox', name='area', value='San Jose')
								label.label--filter-option-multi(for='area-berkeley') Berkeley
									input#area-berkeley(type='checkbox', name='area', value='Berkeley')
								label.label--filter-option-multi(for='area-oakland') Oakland
									input#area-oakland(type='checkbox', name='area', value='Oakland')

						hr

						.row
							.col-xs-12
								a.btn.btn--primary-navigation.btn-market-filters-close View Results
								a.btn.btn--tertiary-navigation.btn-market-filters-clear Clear Filters